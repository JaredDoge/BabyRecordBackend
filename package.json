{
  "name": "baby-record-backend",
  "version": "2.0.0",
  "description": "Baby Record Backend API (Cloudflare Workers + D1)",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "db:create:local": "wrangler d1 execute baby-record-db --local --file=./schema/records.sql",
    "db:create:remote": "wrangler d1 execute baby-record-db --remote --file=./schema/records.sql",
    "db:migrate:local": "wrangler d1 execute baby-record-db --local --file=./migrations/001_add_notes_column.sql",
    "db:migrate:remote": "wrangler d1 execute baby-record-db --remote --file=./migrations/001_add_notes_column.sql",
    "dev:local": "wrangler dev --local",
    "dev:remote": "wrangler dev --remote"
  },
  "dependencies": {
    "hono": "^4.6.10"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250204.0",
    "typescript": "^5.3.3",
    "wrangler": "^3.105.0"
  }
}